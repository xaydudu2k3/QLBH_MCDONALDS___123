<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link href="~/Public/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/Public/dist/css/adminlte.min.css" rel="stylesheet" />
    <!-- Bootstrap tu dinh  nghia-->
    <link href="~/Public/css/LayoutAdmin.css" rel="stylesheet" />

    @*Khu vuc header*@
    @RenderSection("header", required: false)
</head>


@*Khu vuc body*@
<body class="hold-transition sidebar-mini">

    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="../../index3.html" class="nav-link">Home</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button">
                        <i class="fas fa-th-large"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="@Url.Action("Index","Link")" class="brand-link">
                <img src="https://workshopx.co.nz/wp-content/uploads/2023/04/McDonalds-logo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">McDonald's</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="@Url.Action("Index","Dashboard")" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p class="text">Dashboard</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index","POS")" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p class="text">POS</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "HoaDon")" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p class="text">Danh sách đơn hàng</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index","PhongBep")" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p class="text">Phòng Bếp</p>
                            </a>
                        </li>
                        <!--Phàn còn lại của menu-->
                        <li class="nav-header">Master List</li>
                        <!-- Menu Sản phẩm: Loại SP, Sản phẩm, Nhà cung cấp -->
                        <li class="nav-item">
                            <a href="@Url.Action("Index","LoaiSanPham")" class="nav-link">
                                <i class="fa fa-procedures " aria-hidden="true"></i>
                                <p>
                                    Danh mục loại sản phẩm
                                </p>
                            </a>
                        </li>

                        <!-- Menu danh mục bài viết-->
                        <li class="nav-item">
                            <a href="~/Admin/Sanpham" class="nav-link">
                                <i class="fa fa-pen "></i>
                                <p>
                                    Danh mục sản phẩm
                                </p>
                            </a>
                        </li>

                        <!--Menu dành cho giao diện-->
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="fa fa-book "></i>
                                <p>
                                    Báo cáo
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("Index","BaoCao")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Doanh thu theo ngày</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="fa fa-book "></i>
                                <p>
                                    Kho
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("Index","NhaCungCaps")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Nhà cung cấp</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Index","DonNhapHangs")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Nhập hàng</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>
        <div class="wrapper">
            <!-- Main Sidebar Container -->
            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                @RenderBody()
            </div> <!-- /.content-wrapper -->
        </div><!-- ./wrapper -->
        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Version</b> 3.1.0
            </div>
            <strong>Copyright &copy; 2014-2021 <a href="#">Nhóm 4</a>.</strong> All rights reserved.
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/Public/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Public/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Public/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Public/dist/js/demo.js"></script>

    @*Khu vuc Footer*@
    @RenderSection("footer", required: false)
</body>


</html>