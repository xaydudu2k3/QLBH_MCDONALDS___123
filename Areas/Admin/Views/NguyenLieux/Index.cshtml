@model IEnumerable<QLBH_MCDONALDS.Models.NguyenLieu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header{
    <link rel="stylesheet" href="~/Public/css/jquery.dataTables.min.css" />
}
@section footer{
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>
    let table = new DataTable('#myTable');
    </script>
}

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <strong class="text-danger">DANH SÁCH NHÀ CUNG CẤP</strong>
                </div>
                <div class="col-md-6 text-right">
                    <a href="@Url.Action("Create", "NguyenLieux")" class="btn-sm btn-success"><i class="fa fa-plus">Thêm</i></a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped" id="myTable">
                <thead>
                    <tr>
                        <th>Tên nguyên liệu</th>
                        <th>Đơn vị tính</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.TenNL)</td>
                            <td>@Html.DisplayFor(modelItem => item.DonViTinh)</td>
                            <td>@Html.DisplayFor(modelItem => item.Gia)</td>
                            <td>@Html.DisplayFor(modelItem => item.SoLuong)</td>
                            <td>
                                <a href="@Url.Action("Edit", "NguyenLieux", new { id = item.MaNL })" class="btn-sm btn-primary"><i class="fa fa-edit"></i></a>
                                <a href="@Url.Action("Details", "NguyenLieux", new { id = item.MaNL })" class="btn-sm btn-info"><i class="fa fa-eye"></i></a>
                                <a href="@Url.Action("Delete", "NguyenLieux", new { id = item.MaNL })" class="btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div> <!-- /.card-footer-->
    </div><!-- /.card -->
</section><!-- /.content -->