@model QLBH_MCDONALDS.Models.DonNhapHang

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<h2>Details</h2>

<h2>Chi tiết Đơn hàng @Model.MaDonHang</h2>
<table class="table">
    <tr>
        <th>Tên sản phẩm</th>
        <th>Số lượng</th>
        <th></th>
    </tr>

    @foreach (var chiTiet in Model.ChiTietDonNhapHangs)
    {
        <tr>
            <td>
                @chiTiet.NguyenLieu.TenNL
            </td>
            
            <td>@chiTiet.NguyenLieu.SoLuong</td>
        </tr>
    }

</table>
